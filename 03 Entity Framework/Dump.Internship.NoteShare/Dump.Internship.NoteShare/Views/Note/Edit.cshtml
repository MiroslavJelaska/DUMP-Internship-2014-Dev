@model Dump.Internship.NoteShare.Models.Note

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        <form method="POST" action="/note-edit/@Model.Id">

            @Html.HiddenFor(x => x.Id)

            <label for="note-title">Title: </label>
            @*<input name="Title" id="note-title" type="text" value="@Model.Title" />*@
            @Html.TextBoxFor(x => x.Title)
            
            <br/><br />

            <label for="note-text">Text: </label>
            @*<textarea id="note-text" name="Text">@Model.Text</textarea>*@
            @Html.TextAreaFor(x => x.Text)
            
            <br /><br />
            
            <button type="submit">Save</button>

        </form>
    </div>
</body>
</html>